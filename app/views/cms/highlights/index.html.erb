<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Highlights</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to 'Add Highlight', new_cms_highlight_path, class: 'btn btn-primary' %>
      </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Type</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              <% @highlights.each do |highlight| %>
                <tr>
                  <td><%= highlight.id %></td>
                  <td><%= highlight.generic_title %></td>
                  <td><%= highlight.highlight_type %></td>
                  <td>
                    <span class='status status-<%= highlight.status %>'><%= highlight.status %></span>
                    <%= link_to highlight.status_action_label, cms_highlight_change_status_path(highlight), method: :patch, data: { confirm: 'Are you sure?' } %>
                  </td>
                  <td>
                    <%= link_to cms_highlight_path(highlight) do %>
                      <i class='fa fa-eye fa-fw'></i>
                    <% end %>
                    <%= link_to cms_highlight_path(highlight), method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class='fa fa-trash-o fa-fw' title="delete"></i>
                    <% end %>
                    <%= link_to edit_cms_highlight_path(highlight) do %>
                      <i class='fa fa-pencil-square-o fa-fw'></i>
                    <% end %>
                    <%= link_to cms_highlight_posts_path(highlight) do %>
                      <i class='fa fa-file-text fa-fw'></i>
                    <% end if highlight.news? %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
