<% if @info.errors.any? %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-danger alert-dismissable">
        <h4><%= pluralize(@info.errors.count, "error") %> prohibited this info from being saved:</h4>

        <ul>
        <% @info.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <%= form_for([:cms, @info]) do |f| %>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Title</label>
                <%= f.text_field(:title, :class => 'form-control') %>
              </div>
              <div class="col-lg-12 form-group">
                <label>Icon</label>
                <%= f.text_field(:icon, :class => 'form-control') %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-6">
                <button type="submit" class="btn btn-primary">Save info</button>
                or <%= link_to 'Back', cms_infos_path %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- /.row -->
      </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
