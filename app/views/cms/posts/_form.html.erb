<% if @post.errors.any? %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-danger alert-dismissable">
        <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <%= form_for([:cms, @highlight, @post]) do |f| %>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Highlight</label><br>
                <%= @highlight.title %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Title</label>
                <%= f.text_field(:title, :class => 'form-control') %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Headline</label>
                <%= f.text_field(:headline, :class => 'form-control') %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Content</label>
                <%= f.text_area(:content, rows: 5, :class => 'form-control') %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-12 form-group">
                <label>Footnote</label>
                <%= f.text_area(:footnote, rows: 4, :class => 'form-control') %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-4 form-group">
                <label>Franchise</label>
                <%= f.collection_select(:franchise_id, Franchise.all, :id, :name, { prompt: 'None' }, { class: 'form-control' }) %>
              </div>
              <div class="col-lg-4 form-group">
                <label>Restaurant</label>
                <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name, { prompt: 'None' }, { class: 'form-control' }) %>
              </div>
              <div class="col-lg-4 form-group">
                <label>Place</label>
                <%= f.collection_select(:place_id, Place.all, :id, :name, { prompt: 'None' }, { class: 'form-control' }) %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="col-lg-6">
                <button type="submit" class="btn btn-primary">Save post</button>
                or <%= link_to 'Back', cms_highlight_posts_path %>
              </div>
            </div>
          <% end %>
        </div>
        <!-- /.row -->
      </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->