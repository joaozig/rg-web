<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Posts</h1>
    <h4><%= @highlight.title %></h4>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to 'Voltar', cms_highlights_path, class: 'btn btn-default' %>
        <%= link_to 'Add Post', new_cms_highlight_post_path, class: 'btn btn-primary' %>
      </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.id %></td>
                  <td><%= post.title %></td>
                  <td>
                    <%= link_to cms_highlight_post_path(@highlight, post) do %>
                      <i class='fa fa-eye fa-fw'></i>
                    <% end %>
                    <%= link_to edit_cms_highlight_post_path(@highlight, post) do %>
                      <i class='fa fa-pencil-square-o fa-fw'></i>
                    <% end %>
                    <%= link_to cms_highlight_post_path(@highlight, post), method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class='fa fa-trash-o fa-fw' title="delete"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
