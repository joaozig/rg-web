<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Categories</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to 'Add Category', new_cms_category_path, class: 'btn btn-primary' %>
      </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.id %></td>
                  <td><%= category.name %></td>
                  <td>
                    <%= link_to cms_category_path(category) do %>
                      <i class='fa fa-eye fa-fw'></i>
                    <% end %>
                    <%= link_to edit_cms_category_path(category) do %>
                      <i class='fa fa-pencil-square-o fa-fw'></i>
                    <% end %>
                    <%= link_to cms_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class='fa fa-trash-o fa-fw' title="delete"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
